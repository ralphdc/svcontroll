<script type="text/javascript">

function configAddAjaxDone(json){
	var name=$('.add_name').val();
	if(name==''){
		alert('配置实例名不能为空');
		return false;
	}
	DWZ.ajaxDone(json);
	if(json.id > 0)
	{
		addTreeNode(config_tree_which,name,json.id);
		$.pdialog.closeCurrent();
	}
}
</script>
