<div class="pageContent" style="width: 420px;">
	<form method="post" action="__URL__/copyMachine/method/copyInstance" class="pageForm required-validate" onsubmit="return validateCallback(this, dialogAjaxDone)" novalidate="novalidate">
		<div class="pageFormContent" layouth="58" style="height: 297px; overflow: auto;">
			<p>
				<label>机器名称：</label>
				<input type="text" size="28" name="machineName" maxlength="15" class="required textInput">
			</p>
			<p>
				<label>appId：</label>
				<input type="text" size="28" name="appId" class="required textInput"  value="{$appId}">
				<input type="hidden" size="28" name="id" class="required textInput" readonly value="{$_REQUEST['id']}">
			</p>
			<p>
				<label>部署模式：</label>
				<select name="deployMode" disabled>
					<eq name="_REQUEST['deployMode']" value="singleProcess">
					<option value="singleProcess">单进程部署</option>
					<else/>
					<option value="multiProcess">多进程部署</option>
					</eq>
				  </select>
			</p>
			
		</div>
		<div class="formBar">
			<ul>
				<li><div class="buttonActive"><div class="buttonContent"><button type="submit">一键复制</button></div></div></li>
				<li><div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div></li>
			</ul>
		</div>
	</form>
</div>
