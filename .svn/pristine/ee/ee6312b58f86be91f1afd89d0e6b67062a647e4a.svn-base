	//获取机柜信息；
	function getTargetCabite($voo)
	{
	    $option = '<option value="0">请选择机柜</option>';
	    if($voo['areaid'] > 0){
	        $post['areaid'] = $voo['areaid'];
	        $Cabinet = new CabinetModel();
	        $allinfo = $Cabinet->getAll($post);
	        if(is_array($allinfo) && count($allinfo))
	        {
	            foreach ($allinfo as $key =>$val)
	            {
	                $selected = $val['id'] == $voo['cabinetid'] ? "selected='selected'" : '';
	                $option .= '<option value="'.$val['id'].'" '.$selected.'>'.$val['name'].'</option>';
	            }
	        }
	    }elseif ($voo['cabinetid'] > 0){
	        $option .= '<option value="'.$voo['cabinetid'].'" selected="selected">'.$voo['cabinetname'].'</option>';
	    }
	    return $option;
	}
	
