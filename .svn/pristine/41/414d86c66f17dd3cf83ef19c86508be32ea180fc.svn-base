	         if(count($nt)==0){
	             $nts = 0;
	         }elseif(count($nt) == 1){
	             $nts = current($nt);
	         }elseif(count($nt) ==2){
	             $nts = 3;
	         }
	         
	         
	         $Operatmember= new OperatmemberModel();
	         $result = $Operatmember->modelUpdateStaffNotice(array('groupId'=>$groupid,'operatorId'=>$operaterid,'noticeType'=>$nts));
	         if(isset($result['errorCode']) &&  $result['errorCode'] == 0){
