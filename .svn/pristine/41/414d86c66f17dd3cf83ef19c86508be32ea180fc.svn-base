    	            );
	            echo json_encode($ret);	
	            return;
	           }else{
    	            $ret = array("statusCode"=>"0","message"=>$result['errorMessage'],"navTabId"=>'',//$this->navTab
    	                "rel"=>"","forwardUrl"=>"","callbackType"=>"closeCurrent");
    	            echo json_encode($ret);	return;
	           }
	    }
	   }
	}
