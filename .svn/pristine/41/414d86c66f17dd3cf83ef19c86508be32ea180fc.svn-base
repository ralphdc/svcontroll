	                if(isset($ntype[$idv]) && is_array($ntype[$idv]) && count($ntype[$idv]) > 0){
	                   if(count($ntype[$idv]) == 2){
	                       $noticeType =3;
	                   }else if(count($ntype[$idv]) == 1){
