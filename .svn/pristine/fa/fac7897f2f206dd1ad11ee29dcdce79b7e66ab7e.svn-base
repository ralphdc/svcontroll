 	/**
     * 批量删除选中的记录
     * @param array $get
     */
    function postRemoveAll($ids) {
    	if (is_array($this->primaryKey))
    		return false;
    	$pkvs = split(',', trim($ids,','));
    	$i =0;
		foreach ($pkvs as $value) {
			$result = $this->postRemove($value);
			if($result['rtn']== 'OK'){
				++$i;
			}
		}
    	return $i;
    }
	
